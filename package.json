{
  "name": "systems-control-js",
  "version": "0.0.1",
  "description": "Systems Control Utility Library",
  "main": "./dist/cjs/index.js",
  "module": "./dist/esm/index.js",
  "typings": "build/main/index.d.ts",
  "repository": "https://github.com/Brenopms/systems-controls-js",
  "license": "MIT",
  "files": [
    "dist/"
  ],
  "keywords": [
    "control",
    "system-control",
    "engineering"
  ],
  "scripts": {
    "prepublish": "npm run build",
    "build": "run-p build:*",
    "build:cjs": "tsc -p tsconfig.cjs.json",
    "build:esm": "tsc -p tsconfig.json",
    "format": "prettier \"src/**/*.ts\" --check",
    "format:fix": "prettier \"src/**/*.ts\" --write",
    "lint": "eslint ./src/",
    "lint:fix": "eslint --fix ./src",
    "test": "run-s build test:*",
    "test:prettier": "prettier \"src/**/*.ts\" --list-different",
    "test:unit": "vitest run",
    "test:coverage": "vitest run --coverage",
    "watch:build": "tsc -p tsconfig.json -w",
    "watch:test": "vitest",
    "generate-docs": "typedoc ./src --githubPages --includeVersion --out ./genDocs",
    "release": "semantic-release"
  },
  "engines": {
    "node": ">=12"
  },
  "dependencies": {
    "mathjs": "^10.0.0"
  },
  "devDependencies": {
    "@typescript-eslint/eslint-plugin": "^4.0.1",
    "@typescript-eslint/parser": "^4.0.1",
    "@vitest/coverage-c8": "^0.26.3",
    "c8": "^7.12.0",
    "conventional-changelog-conventionalcommits": "^5.0.0",
    "cspell": "^4.1.0",
    "cz-conventional-changelog": "^3.3.0",
    "eslint": "^7.8.0",
    "eslint-config-prettier": "^6.11.0",
    "eslint-plugin-eslint-comments": "^3.2.0",
    "eslint-plugin-import": "^2.22.0",
    "gh-pages": "^3.1.0",
    "npm-run-all": "^4.1.5",
    "open-cli": "^6.0.1",
    "prettier": "^2.1.1",
    "semantic-release": "^20.1.1",
    "standard-version": "^9.0.0",
    "ts-node": "^10.9.1",
    "typedoc": "^0.23.10",
    "typedoc-plugin-missing-exports": "^1.0.0",
    "typescript": "^4.7.4",
    "vitest": "^0.26.3"
  },
  "config": {
    "commitizen": {
      "path": "cz-conventional-changelog"
    }
  },
  "prettier": {
    "singleQuote": true,
    "printWidth": 120
  },
  "c8": {
    "checkCoverage": true,
    "lines": 75,
    "statements": 75
  }
}
